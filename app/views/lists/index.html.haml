%h3 Списки
.lists
  - for list in @lists
    .row
      .four.columns
        = link_to list.name, list
      = link_to "Редактировать", edit_list_path(list), class: 'small secondary button radius'
      = link_to "Удалить", list, :confirm => 'Are you sure?', :method => :delete,  class: 'small alert button radius'
%p= link_to "Новый список", new_list_path, class: 'small button radius'