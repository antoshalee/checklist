= nested_form_for @list do |f|
  - @list.errors.full_messages.each do |msg|
    %p= msg
  .row
    = f.text_field :name, class: 'ten', placeholder: 'Название чеклиста'
  %fieldset
    %legend Записи
    = f.fields_for :records do |record_form|
      .row
        .ten.columns
          = record_form.text_field :content, placeholder: 'Добавить запись'
        = record_form.link_to_remove "×", class: 'tiny button alert round'
    = f.link_to_add "Добавить запись", :records, class: 'small button'
  %p= f.submit